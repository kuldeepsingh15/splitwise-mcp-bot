{
  "name": "splitwise-gen-ai",
  "version": "1.0.0",
  "description": "Splitwise GenAI application with frontend, backend, and MCP server",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:mcp\"",
    "dev:frontend": "cd chat-frontend && npm run dev",
    "dev:backend": "cd mcp-use && python server.py",
    "dev:mcp": "cd splitwise-mcp && python main.py server",
    "install:frontend": "cd chat-frontend && npm install",
    "install:all": "npm run install:frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["splitwise", "genai", "mcp", "react", "fastapi"],
  "author": "",
  "license": "MIT"
} 